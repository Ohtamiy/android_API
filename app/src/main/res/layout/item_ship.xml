<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/itemCountryPadding">

    <TextView
        android:id="@+id/ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detailsTitleMarginTop"
        android:text="@string/ship"
        android:textColor="@color/black"
        android:textSize="@dimen/detailsTitleTextSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/detailsTitleTextSize"
        app:layout_constraintStart_toStartOf="@id/ship"
        app:layout_constraintTop_toBottomOf="@id/ship" />

</androidx.constraintlayout.widget.ConstraintLayout>